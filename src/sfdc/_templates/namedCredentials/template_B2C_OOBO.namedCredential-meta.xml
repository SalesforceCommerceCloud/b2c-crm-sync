<?xml version="1.0" encoding="UTF-8"?>
<NamedCredential xmlns="http://soap.sforce.com/2006/04/metadata">
    <allowMergeFieldsInBody>true</allowMergeFieldsInBody>
    <allowMergeFieldsInHeader>true</allowMergeFieldsInHeader>
    <endpoint>{{B2C_HOSTNAME}}</endpoint>
    <generateAuthorizationHeader>true</generateAuthorizationHeader>
    <label>{{B2C_INSTANCENAME}}: B2C: OOBO Named Credentials</label>
    <principalType>PerUser</principalType>
    <protocol>Password</protocol>
    <username>{{B2C_USERNAME}}</username>
    <password>{{B2C_ACCESSKEY}}:{{B2C_CLIENTSECRET}}</password>
</NamedCredential>
